	<PerformanceScale id="scale_1to5">
		<LeastCompetent>1</LeastCompetent>
		<MostCompetent>5</MostCompetent>
	</PerformanceScale>
	<Component id="comp_e1">
		<Title>Prepare a meal as a solo cook.</Title>
		<Competency>
			<Reference>
				<rdf:description about="http://www.example.org/shortordercookepas/e1"/>
				<rdf:type rdf:resource="http://ns.medbiq.org/competencyobject/v1/"/>
			</Reference>
			<Reference>
				<rdf:description about="http://www.example.org/short_order_cook_competencyframework_v1"/>
				<rdf:type rdf:resource="http://www.example.org/short_order_cook_epas_v1/"/>
				<dcterms:format>application/xml</dcterms:format>
			</Reference>
		</Competency>
		<PerformanceLevelSet>
			<PerformanceScaleReference>scale_1to5</PerformanceScaleReference>
			<PerformanceLevel>
				<DisplayOrder>1</DisplayOrder>
				<Score>
					<SingleValue>1</SingleValue>
				</Score>
				<Label>Be present and observe</Label>
				<Indicator id="inde101">
					<Description>Observes menu planning and preparation while maintaining personal safety.</Description>
				</Indicator>
			</PerformanceLevel>
			<PerformanceLevel>
				<DisplayOrder>2</DisplayOrder>
				<Score>
					<SingleValue>2</SingleValue>
				</Score>
				<Label>Act with Direct Supervision</Label>
				<Indicator id="inde102">
					<Description>Demonstrates multiple meal preparation competencies (ie Plan a menu, obtain ingredients, prepare a meal) with some prompting from supervising short order cook.</Description>
				</Indicator>
			</PerformanceLevel>
			<PerformanceLevel>
				<DisplayOrder>3</DisplayOrder>
				<Score>
					<SingleValue>3</SingleValue>
				</Score>
				<Label>Act with Indirect Supervision</Label>
				<Indicator id="inde103">
					<Description>Prepares a meal independently, calling on a nearby, available short order cook for minimal assistance.</Description>
				</Indicator>
			</PerformanceLevel>
			<PerformanceLevel>
				<DisplayOrder>4</DisplayOrder>
				<Score>
					<SingleValue>4</SingleValue>
				</Score>
				<Label>Act without supervision</Label>
				<Indicator id="inde104">
					<Description>Prepares a tasteful and nutritious meal without assistance.</Description>
				</Indicator>
			</PerformanceLevel>
			<PerformanceLevel>
				<DisplayOrder>5</DisplayOrder>
				<Score>
					<SingleValue>5</SingleValue>
				</Score>
				<Label>Provide supervision</Label>
				<Indicator id="inde105">
					<Description>Provides supervision for overall meal preparation or aspects of meal preparation for other short order cook trainees.</Description>
				</Indicator>
			</PerformanceLevel>
		</PerformanceLevelSet>		
	</Component>
